<%- include('../partials/header') %>

    <div class="container">
        <div class="card" style="margin-top: 2rem;">
            <!-- Header -->
            <div style="border-bottom: 1px solid var(--border-color); padding-bottom: 1.5rem; margin-bottom: 1.5rem;">
                <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                    <div>
                        <h1 style="color: var(--primary-color); margin-bottom: 0.5rem;">
                            <%= job.designation %>
                        </h1>
                        <h3 style="color: var(--secondary-color); font-weight: 500;">
                            <%= job.companyName %>
                        </h3>
                        <div style="margin-top: 0.5rem; color: var(--text-light);">
                            <span style="margin-right: 1rem;"><i class="fas fa-map-marker-alt"></i>
                                <%= job.location %>
                            </span>
                            <span><i class="fas fa-clock"></i> Due: <%= job.dueDate %></span>
                        </div>
                    </div>

                    <% if (user && user.id===job.recruiterId) { %>
                        <div style="display: flex; gap: 0.5rem;">
                            <a href="/jobs/<%= job.id %>/applicants" class="btn btn-primary"><i
                                    class="fas fa-users"></i> Applicants (<%= job.applicants.length %>)</a>
                            <a href="/jobs/<%= job.id %>/update" class="btn btn-secondary"><i class="fas fa-edit"></i>
                                Edit</a>
                            <button onclick="confirmDelete('<%= job.id %>')" class="btn"
                                style="background-color: #ef4444; color: white;"><i class="fas fa-trash"></i>
                                Delete</button>

                            <form id="delete-form-<%= job.id %>" action="/jobs/<%= job.id %>/delete" method="POST"
                                style="display: none;"></form>
                        </div>
                        <% } %>
                </div>
            </div>

            <!-- Details -->
            <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem;">
                <div>
                    <div style="margin-bottom: 1.5rem;">
                        <h4>Job Category</h4>
                        <p>
                            <%= job.category %>
                        </p>
                    </div>

                    <div style="margin-bottom: 1.5rem;">
                        <h4>Salary</h4>
                        <p>
                            <%= job.salary %>
                        </p>
                    </div>

                    <div style="margin-bottom: 1.5rem;">
                        <h4>Positions Available</h4>
                        <p>
                            <%= job.positions %>
                        </p>
                    </div>

                    <div style="margin-bottom: 1.5rem;">
                        <h4>Skills Required</h4>
                        <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                            <% job.skills.forEach(skill=> { %>
                                <span
                                    style="background: #e0f2fe; color: #0284c7; padding: 0.25rem 0.75rem; border-radius: 1rem; font-size: 0.9rem;">
                                    <%= skill %>
                                </span>
                                <% }) %>
                        </div>
                    </div>
                </div>

                <!-- Apply Section -->
                <div>
                    <div class="card"
                        style="background-color: #f8fafc; border: 1px solid var(--border-color); box-shadow: none;">
                        <h3>Apply for this Job</h3>
                        <p style="margin-bottom: 1rem; font-size: 0.9rem; color: var(--text-light);">Send your
                            application to <%= job.companyName %>
                        </p>

                        <% if (typeof errorMessage !=='undefined' && errorMessage) { %>
                            <div class="alert alert-danger">
                                <%= errorMessage %>
                            </div>
                            <% } %>

                                <form action="/jobs/<%= job.id %>/apply" method="POST" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label class="form-label">Name</label>
                                        <input type="text" name="name" class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Email</label>
                                        <input type="email" name="email" class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Contact No</label>
                                        <input type="text" name="contact" class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Resume (PDF)</label>
                                        <input type="file" name="resume" class="form-control" accept="application/pdf"
                                            required>
                                    </div>
                                    <button type="submit" class="btn btn-primary" style="width: 100%;">Submit
                                        Application</button>
                                </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function confirmDelete(id) {
            if (confirm('Are you sure you want to delete this job? This action cannot be undone.')) {
                document.getElementById('delete-form-' + id).submit();
            }
        }
    </script>

    <%- include('../partials/footer') %>